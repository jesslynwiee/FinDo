<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical"
    tools:context=".PhotoResultActivity">

    <fragment
        android:id="@+id/header_search"
        android:name="com.example.findo.HeaderFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/camera_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:maxHeight="200dp" />

    <TextView
        android:id="@+id/string_ar_wording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What item you want to search?"
        android:textAlignment="center"
        android:textSize="24sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ar_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>