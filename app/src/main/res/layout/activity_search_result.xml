<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultActivity"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/search_activity_container">

    <fragment
        android:name="com.example.findo.SearchFragment"
        android:id="@+id/header_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--    commented because need data-->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/title_wording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_search">

        <TextView
            android:id="@+id/title_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result of "/>
        
        <TextView
            android:id="@+id/title_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="result"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_wording"
        android:gravity="center">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_searchResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

